<h1>Posts</h1>

<ul>
  <% @posts.each do |post| %>
    <li>
      <%= post.title %> -
      <% if user_signed_in? %>
        <%= User.find(post.user_id).username %>
      <% else %>
        <%= "[REDACTED]" %>
      <% end %>
      <br>
      <%= post.content %><br>
    </li>
  <% end %>
</ul>

<% if user_signed_in? %>
  <%= link_to "New Post", new_post_path %>
  <%= button_to "Sign Out", destroy_user_session_path, :method => :delete %>
<% else %>
  <%= button_to "Sign In", new_user_session_path %>
<% end %>